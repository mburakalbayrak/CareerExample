@using Entities.Concrete;
@model CareerSetting
@{
    ViewData["Title"] = "Update";
}

    <div class="container">
        <h1>Config Ekle</h1>
        @using (Html.BeginForm("Update", "Config", FormMethod.Post))
        {
            <div class="form-group">
                <label>Name:</label>
                <input type="text" name="name" class="form-control" value="@Model.Name" required="">
            </div>

            <div class="form-group">
                <label>Type:</label>
                <select name="type" class="form-control">
                    <option value="int">Int</option>
                    <option value="bool">Boolean</option>
                    <option value="string">String</option>
                </select>
            </div>


            <div class="form-group">
                <label>Value:</label>
                <input type="text" name="value" class="form-control" value="@Model.Value" required="">
            </div>

            <div class="form-group">
                <label>Application Name:</label>
                <input type="text" name="applicationName" class="form-control" value="@Model.ApplicationName" required="">
            </div>

            <button type="submit" class="btn btn-success save-btn">Kaydet</button>
        }

        <br />
    </div>

